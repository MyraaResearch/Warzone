<div class="modal fade" id="voteModalCenter" tabindex="-1" role="dialog" aria-labelledby="voteModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="voteModalLongTitle">Cast a Vote</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="vote-container">
          <div class="input-container">
            <input id="congress" type="radio" name="party" value="cong" />
            <label for="congress">Congress</label>
          </div>
          <div class="input-container">
            <input id="bjp" type="radio" name="party" value="bjp" />
            <label for="bjp">BJP</label>
          </div>
          <div class="input-container">
            <input id="aap" type="radio" name="party" value="aap" />
            <label for="aap">AAP</label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary submit-vote">Vote</button>
      </div>
    </div>
  </div>
</div>
<script src="/js/vote.js"></script>
